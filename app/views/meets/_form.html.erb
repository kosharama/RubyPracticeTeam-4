<%= form_with(model: meet, local: true) do |form| %>
  <% if meet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(meet.errors.count, "error") %> prohibited this meet from being saved:</h2>

      <ul>
        <% meet.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :doctor_id, value: @doctor.id %>
  <%= form.hidden_field :user_id, value: @user.id %>

  <div class="field">
    <h2><%=meet.doctor.first_name %>
    <%=meet.doctor.last_name %></h2>
    <%=meet.doctor.specialty %>



    <h2><%=meet.user.first_name %>
      <%=meet.user.last_name %></h2>



    <%= form.label :appointment_date_time %><br>
    <%= form.datetime_field :appointment_date_time %>



    <%= form.submit 'Записатись', class: 'button1' %>

  </div>
<% end %>